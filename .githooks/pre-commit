#!/bin/bash
# Pre-commit hook: Run Ruff and Black on staged Python files

set -e

# Color codes for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

echo -e "${BLUE}ğŸ” Running pre-commit checks...${NC}\n"

# Get list of staged Python files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.py$' || true)

if [ -z "$STAGED_FILES" ]; then
    echo -e "${GREEN}âœ“ No Python files staged, skipping checks${NC}"
    exit 0
fi

echo -e "${BLUE}Staged Python files:${NC}"
echo "$STAGED_FILES" | sed 's/^/  - /'
echo ""

# Track if we made any changes
FILES_MODIFIED=0

# Run Ruff check with auto-fix
echo -e "${BLUE}1ï¸âƒ£  Running Ruff linter...${NC}"
if uv run ruff check src/ tests/ --fix; then
    echo -e "${GREEN}âœ“ Ruff passed${NC}\n"
else
    RUFF_EXIT=$?
    echo -e "${RED}âœ— Ruff found issues that couldn't be auto-fixed${NC}"
    echo -e "${YELLOW}Please review the errors above and fix them manually${NC}"
    echo -e "${YELLOW}Then stage your changes with: git add .${NC}\n"
    exit $RUFF_EXIT
fi

# Check if Ruff made any changes to staged files
for file in $STAGED_FILES; do
    if ! git diff --quiet "$file" 2>/dev/null; then
        FILES_MODIFIED=1
        break
    fi
done

# Run Black formatter
echo -e "${BLUE}2ï¸âƒ£  Running Black formatter...${NC}"
if uv run black src/ tests/ --check --quiet; then
    echo -e "${GREEN}âœ“ Black formatting passed${NC}\n"
else
    echo -e "${YELLOW}âš  Black found formatting issues, auto-fixing...${NC}"
    if uv run black src/ tests/; then
        echo -e "${GREEN}âœ“ Black auto-fix successful${NC}\n"
        FILES_MODIFIED=1
    else
        echo -e "${RED}âœ— Black auto-fix failed${NC}"
        echo -e "${YELLOW}Please review the errors above${NC}\n"
        exit 1
    fi
fi

# Check if Black made any changes to staged files
if [ $FILES_MODIFIED -eq 0 ]; then
    for file in $STAGED_FILES; do
        if ! git diff --quiet "$file" 2>/dev/null; then
            FILES_MODIFIED=1
            break
        fi
    done
fi

# If files were modified, inform the user
if [ $FILES_MODIFIED -eq 1 ]; then
    echo -e "${YELLOW}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
    echo -e "${YELLOW}âš   Files were auto-fixed by Ruff or Black${NC}"
    echo -e "${YELLOW}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
    echo -e "${YELLOW}Please review the changes and add them to your commit:${NC}"
    echo -e "${YELLOW}  git add .${NC}"
    echo -e "${YELLOW}  git commit${NC}\n"
    exit 1
fi

echo -e "${GREEN}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
echo -e "${GREEN}âœ“ All pre-commit checks passed!${NC}"
echo -e "${GREEN}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}\n"

exit 0